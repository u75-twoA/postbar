.z {
  background-color: #F8F8FF;
  height: 100vh;
}
.z .t-content {
  padding: 20rpx 20rpx;
  background-color: #F0FFFF;
  padding-bottom: 30rpx;
  border-radius: 0 0 30rpx 30rpx;
}
.z .t-content .top {
  margin-top: 30rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.z .t-content .top .l-top {
  display: flex;
  align-items: center;
}
.z .t-content .top .l-top image {
  height: 90rpx;
  width: 90rpx;
  margin-right: 30rpx;
}
.z .t-content .top .l-top .l-top-r {
  display: flex;
  flex-direction: column;
}
.z .t-content .top .l-top .l-top-r text {
  font-weight: bold;
  margin-bottom: 2rpx;
}
.z .t-content .top .l-top .l-top-r .l-top-r-b text {
  font-size: 18rpx;
  color: #696969;
  margin-right: 10rpx;
}
.z .t-content .top .r-top image {
  height: 50rpx;
  width: 50rpx;
  margin-right: 10rpx;
}
.z .content {
  padding: 20rpx 20rpx;
}
.z .content .top-1 {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 40rpx;
}
.z .content .top-1 .postman {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.z .content .center {
  border-radius: 40rpx;
  background-color: #fff;
}
.z .content .center .c-function {
  margin-bottom: 30rpx;
}
.z .content .center .c-function .title {
  font-weight: bold;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.z .content .center .c-function .b-function {
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.z .content .center .c-function .b-function .d-functon {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.z .content .center .c-function .b-function .d-functon image {
  height: 60rpx;
  width: 60rpx;
}