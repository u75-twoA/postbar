.demo-warter {
  margin: 10rpx 10rpx 10rpx 0;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 5rpx;
}
.demo-warter .image-container {
  position: relative;
}
.demo-warter .image-container .image {
  mim-height: 300rpx;
  max-height: 600rpx;
}
.demo-warter .image-container .demo-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  color: white;
  padding: 5px;
  box-sizing: border-box;
  background-color: rgba(128, 128, 128, 0.5);
  border-radius: 10rpx;
  font-size: 25rpx;
}
.demo-tag {
  display: flex;
  margin-top: 10rpx;
}
.demo-tag .demo-tag-owner {
  border: 1px solid #fca381;
  color: #ffaa00;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  padding: 4rpx 14rpx;
  border-radius: 50rpx;
}
.demo-tag .demo-tag-text {
  border: 1px solid #0af;
  color: #0af;
  margin-left: 20rpx;
  border-radius: 20rpx;
  padding: 4rpx 14rpx;
  font-size: 20rpx;
  display: flex;
  align-items: center;
}
.demo {
  display: flex;
  align-items: center;
}
.demo image {
  height: 70rpx;
  width: 70rpx;
  border-radius: 30%;
