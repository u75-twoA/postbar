.top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 20rpx;
  padding-top: 20rpx;
  padding-right: 20rpx;
}
.content {
  padding: 20rpx 20rpx;
  background-color: #F8F8F8;
  height: 100%;
  margin-top: 20rpx;
}
.content .u-collect {
  background-color: #fff;
  border-radius: 20rpx;
  padding-bottom: 15rpx;
  margin-top: 20rpx;
  padding-top: 15rpx;
}
.content .u-collect .u-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 10rpx;
}
.content .u-collect .u-content .u-left {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.content .u-collect .u-content .u-left image {
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  margin-right: 15rpx;
}
.content .u-collect .u-content .u-left text {
  font-size: 30rpx;
}
.content .u-collect .u-content .u-right {
  padding: 5px 10px;
  font-size: 12px;
  color: #4A90E2;
  background-color: #fff;
  border: 2px solid #4A90E2;
  border-radius: 5px;
  margin-right: 20rpx;
}
.content .u-collect .u-content .u-right-two {
  padding: 5px 10px;
  font-size: 12px;
  color: #000;
  background-color: #fff;
  border-radius: 5px;
  margin-right: 20rpx;
}
.content .u-collect .u-text {
  margin-left: 20rpx;
}