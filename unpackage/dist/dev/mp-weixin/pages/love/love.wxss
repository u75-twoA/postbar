.content {
  height: 100vh;
  background-color: #F5F5F5;
}
.content .post {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 10rpx;
}
.content .post .top {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.content .post .top image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}
.content .post .top .top-r {
  display: flex;
  flex-direction: column;
}
.content .post .p-content {
  display: flex;
  align-items: center;
  background-color: #F5F5F5;
  border-radius: 20rpx;
  margin-top: 10rpx;
  margin-bottom: 15rpx;
}
.content .post .p-content image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  margin-right: 15rpx;
}
.content .post .button {
  font-size: 25rpx;
  color: #696969;
}